<!DOCTYPE html>
<html>
  <head>
    <title>Myapp</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script src="https://use.fontawesome.com/651da52272.js"></script>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="keywords" content="Pooled Responsive web template, Bootstrap Web Templates, Flat Web Templates, Android Compatible web template,
    Smartphone Compatible web template, free webdesigns for Nokia, Samsung, LG, SonyEricsson, Motorola web design" />
    <script type="application/x-javascript"> addEventListener("load", function() { setTimeout(hideURLbar, 0); }, false); function hideURLbar(){ window.scrollTo(0,1); } </script>
    <link href='//fonts.googleapis.com/css?family=Roboto:700,500,300,100italic,100,400' rel='stylesheet' type='text/css'/>
    <link href='//fonts.googleapis.com/css?family=Montserrat:400,700' rel='stylesheet' type='text/css'>
    <%= stylesheet_link_tag 'icon-font.min' %>
    <%= javascript_include_tag 'jquery.basictable.min' %>
    <%= javascript_include_tag 'jquery.nicescroll' %>
    <%= javascript_include_tag 'scripts' %>
    <%= stylesheet_link_tag 'morris' %>
    <%= stylesheet_link_tag 'style' %>
    <%= stylesheet_link_tag 'basictable' %>
    <%= stylesheet_link_tag 'table-style' %>
    <%= stylesheet_link_tag 'modal' %>
    <script type="text/javascript">
      $(document).ready(function() {
        $('#table').basictable();

        $('#table-breakpoint').basictable({
          breakpoint: 768
        });

        $('#table-swap-axis').basictable({
          swapAxis: true
        });

        $('#table-force-off').basictable({
          forceResponsive: false
        });

        $('#table-no-resize').basictable({
          noResize: true
        });

        $('#table-two-axis').basictable();

        $('#table-max-height').basictable({
          tableWrapper: true
        });
      });
    </script>
<!-- //tables -->
  </head>

  <body>
    <div id="root">
      <%= javascript_pack_tag 'layout/App' %>
    </div>
    <%= yield %>
      <script>
      var toggle = true;

      $(".sidebar-icon").click(function() {
        if (toggle)
        {
        $(".page-container").addClass("sidebar-collapsed").removeClass("sidebar-collapsed-back");
        $("#menu span").css({"position":"absolute"});
        }
        else
        {
        $(".page-container").removeClass("sidebar-collapsed").addClass("sidebar-collapsed-back");
        setTimeout(function() {
          $("#menu span").css({"position":"relative"});
        }, 400);
        }

              toggle = !toggle;
            });
      </script>
<!--js -->
  </body>
</html>
